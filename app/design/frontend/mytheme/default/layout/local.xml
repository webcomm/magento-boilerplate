<layout version="0.1.0">


	<default>


		<reference name="root">


			<!-- Start: Add Chrome frame to templates -->
			<block type="core/template" name="chromeframe" template="page/html/chromeframe.phtml"/>


			<!-- Start: Add navigation block to root template -->
			<block type="core/template" name="nav" as="nav" template="page/html/nav.phtml">
				<action method="insert">
					<name>catalog.topnav</name>
				</action>
			</block>


		</reference>


		<reference name="head">


			<!-- Start: Remove Magento's default assets -->
			<action method="removeItem">
					<type>skin_css</type>
					<name>css/print.css</name>
				</action>
				<action method="removeItem">
					<type>skin_css</type>
					<name>css/styles-ie.css</name>
				</action>
				<action method="removeItem">
					<type>skin_css</type>
					<name>css/styles.css</name>
				</action>
				<action method="removeItem">
					<type>skin_css</type>
					<name>css/widgets.css</name>
				</action>
				<action method="removeItem">
					<type>skin_js</type>
					<name>js/ie6.js</name>
				</action>
				<action method="removeItem">
					<type>js</type>
					<name>lib/ds-sleight.js</name>
				</action>
				<action method="removeItem">
					<type>js</type>
					<name>varien/menu.js</name>
				</action>


			<!-- Start: Add our own HTML5 assets -->
			<action method="addCss">
				<stylesheet>css/style.css</stylesheet>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/html5shiv.js</name>
				<params/>
				<if><![CDATA[(gte IE 6)&(lte IE 8)]]></if>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/nwmatcher.js</name>
				<params/>
				<if><![CDATA[(gte IE 6)&(lte IE 8)]]></if>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/selectivizr.js</name>
				<params/>
				<if><![CDATA[(gte IE 6)&(lte IE 8)]]></if>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/modernizr.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/jquery.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/script-ck.js</name>
			</action>


		</reference>


	</default>


	<catalog_product_view>


		<reference name="head">


			<!-- Start: Adjust assets -->
			<action method="addItem">
				<type>skin_js</type>
				<name>js/bootstrap/bootstrap-tab.js</name>
			</action>


		</reference>


		<reference name="product.description">


			<!-- Start: Add title -->
			<action method="setTitle">
				<title>Details</title>
			</action>


		</reference>


		<reference name="product.attributes">


			<!-- Start: Add title -->
			<action method="setTitle">
				<title>Additional Information</title>
			</action>


		</reference>


	</catalog_product_view>


</layout>
